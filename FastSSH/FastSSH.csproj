<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AssemblyName>fast-ssh</AssemblyName>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>fast-ssh</ToolCommandName>
    <Version>1.0.0</Version>
    <PackageId>FastSSH</PackageId>
    <Authors>FastSSH</Authors>
    <Description>Fast SSH client for connecting to servers using stored configurations</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SSH.NET" Version="2025.0.0" />
  </ItemGroup>

</Project>
